<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="Theme.CCVPayment" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <!-- NoActionBar Theme -->
    <style name="Theme.CCVPayment.NoActionBar" parent="Theme.CCVPayment">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Card Style -->
    <style name="CCVCardStyle" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Numpad Button Style -->
    <style name="NumpadButton" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@color/numpad_button</item>
    </style>

    <!-- Numpad Button Secondary Style -->
    <style name="NumpadButtonSecondary" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="backgroundTint">@color/numpad_button</item>
        <item name="iconTint">@color/text_secondary</item>
    </style>

    <!-- Numpad Button Primary Style -->
    <style name="NumpadButtonPrimary" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.CCV.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.CCV.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.CCV.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.CCV.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Dialog Theme -->
    <style name="CCVDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="shapeAppearanceOverlay">@style/DialogShapeAppearance</item>
    </style>

    <style name="DialogShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Bottom Sheet Dialog Theme -->
    <style name="CCVBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CCVBottomSheet</item>
    </style>

    <style name="CCVBottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/BottomSheetShapeAppearance</item>
    </style>

    <style name="BottomSheetShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>
</resources>
